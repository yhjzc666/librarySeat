<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapepr 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.demo.dao.SystemMapper">
    <update id="updateState" parameterType="com.spring.demo.bean.Systems">
        update systems
        set State = #{state}
        where ID = 1
    </update>
</mapper>